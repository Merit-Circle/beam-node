{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "files": {
    "ignore": ["pnpm-lock.yaml"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExtraSemicolon": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "nursery": {
        "noBannedTypes": "off",
        "useExhaustiveDependencies": "error",
        "useGroupedTypeImport": "off",
        "noConsoleLog": "error"
      },
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useShorthandArrayType": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noRedeclare": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "always"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
